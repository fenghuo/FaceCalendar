<h1>Show Members</h1>
<div id='search-box'>
  <form action='/group/show_members' id='search-form' method='get' target='_top'>
    <input id='search-text' name='groupid' placeholder='type here' type='text'/>
    <button id='search-button' type='submit'><span>Search</span></button>
  </form>

<% if (@rs!=nil) %>
  
  <% if (@rs.count<1) %>
    <p>No Groups Found!</p>
  <% else %>
    <table border='1' class='table'>
    <% @rs.each do |row| %>
    <tr>
      <% row.each do |k,v| %>
        <td>  
          <%= v.to_s %>
        </td>
      <% end %>
    </tr>
    <% end %>
    </table>
  <% end %>
<% end %>
</div>
